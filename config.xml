<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wni.wrap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="Orientation" value="portrait" />
    <name>CatalystMobile</name>
    <description>
        A sample mobile application.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        WNI WRAP Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <allow-intent href="market:*" />
        <resource-file src="google-services.json" target="google-services.json" />
    </platform>
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/iPhone_180pt_@3x.png" width="180" height="180" />
        <icon src="res/ios/iPhone_87pt_@3x.png" width="87" height="87" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/iPhone_60pt_@1x.png" width="60" height="60" />
        <icon src="res/ios/iPhone_120pt_@2x" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/iPad_76pt_@1x.png" width="76" height="76" />
        <icon src="res/ios/iPad_152pt_@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/ios/iPhone_40pt_@1x.png" width="40" height="40" />
        <icon src="res/ios/iPhone_80pt_@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/iPhone_57pt_@1x.png" width="57" height="57" />
        <icon src="res/ios/iPhone_114pt_@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/iPad_72pt_@1x.png" width="72" height="72" />
        <icon src="res/ios/iPad_144pt_@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/iPhone_29pt_@1x.png" width="29" height="29" />
        <icon src="res/ios/iPhone_58pt_@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/iPad_50pt_@1x.png" width="50" height="50" />
        <icon src="res/ios/iPad_100pt_@2x.png" width="100" height="100" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <resource-file src="GoogleService-Info.plist" />
        <config-file parent="NSLocationWhenInUseUsageDescription" target="*-Info.plist">
            <string>アプリが位置情報を取得します。</string>
        </config-file>
    </platform>
    <engine name="android" spec="^6.4.0" />
    <engine name="ios" spec="4.5.4" />
    <engine name="browser" spec="5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="phonegap-plugin-push" spec="^2.1.1" />
    <plugin name="cordova-plugin-httpd" spec="^0.9.3" />
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-vibration" spec="^2.1.6" />
    <plugin name="cordova-plugin-geolocation" spec="^3.0.0" />
    <plugin name="cordova-plugin-zip" spec="^3.1.0" />
</widget>
